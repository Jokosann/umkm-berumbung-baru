generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  image     String
  phone     String?
  alamat    String?
  isAdmin   Boolean  @default(false) @map("is_admin")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Business {
  id            String   @id
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  nameBisnis    String   @map("name_bisnis")
  username      String
  whatsapp      String?
  phone         String?
  instagram     String?
  urlInstagram  String?  @map("url_instagram")
  tiktok        String?
  urlTiktok     String?  @map("url_tiktok")
  facebook      String?
  urlFacebook   String?  @map("url_facebook")
  shopee        String?
  urlShopee     String?  @map("url_shopee")
  lazada        String?
  urlLazada     String?  @map("url_lazada")
  tokopedia     String?
  urlTokopedia  String?  @map("url_tokopedia")
  googleMaps    String?  @map("google_maps")
  alamat        String
  description   String?
  profileBisnis String   @map("profile_bisnis")

  @@map("business")
}
