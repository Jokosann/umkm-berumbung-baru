generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  image     String
  phone     String?
  alamat    String?
  isAdmin   Boolean  @default(false) @map("is_admin")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Business {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")
  nameBisnis       String   @map("name_bisnis")
  whatsapp         String?
  telepon          String?
  instagram        String?
  urlInstagram     String?  @map("url_instagram")
  tiktok           String?
  urlTiktok        String?  @map("url_tiktok")
  facebook         String?
  urlFacebook      String?  @map("url_facebook")
  lokasiGoogleMaps String?  @map("lokasi_google_maps")
  lokasiNamaJalan  String?  @map("lokasi_nama_jalan")
  keterangan       String?
  imageBisnis      String   @map("image_bisnis")
  published        Boolean  @default(false)
  user             String?
  userId           String?

  @@unique([user, userId])
  @@map("business")
}
